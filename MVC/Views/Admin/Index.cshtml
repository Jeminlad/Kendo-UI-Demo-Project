@{
    ViewData["Title"] = "Home Page";
    @* Layout = "../Shared/_AdminLayout.cshtml"; *@
    Layout = "../Shared/_Welcome.cshtml";
}
<h3>Tree and Group List</h3>
<div id="treeList"></div>
<div id="grid"></div>
<script>
    $(document).ready(function () {
        loadTree();
    });
    function loadTree() {
        const staticPath = "../../contact_images/";
        $.ajax({
            url: "Admin/List/", // Replace with your API endpoint
            type: 'GET',
            success: function (response) {
                console.log(response);
                const groupedData = [];
                const userGroups = {};
                response.forEach(item => {
                    if (!userGroups[item.c_UserId]) {
                        // Create a parent node for each unique c_UserId (User Name as Title)
                        userGroups[item.c_UserId] = {
                            c_ContactName: ` ${item.c_ContactName} (User ID: ${item.c_UserId})`,
                            items: [] // Store child contacts
                        };
                        // Add the contact as a child node
                        userGroups[item.c_UserId].items.push({
                            c_ContactName: ` ${item.c_ContactName} - ${item.c_Mobile || 'No Mobile'}`,
                        });
                    });
                $("#treeList").kendoTreeView({
                    dataSource: groupedData,
                    dataTextField: "c_ContactName",
                    loadOnDemand: false, // Load all nodes initially
                    expand: function (e) {
                        console.log("Expanded node:", e.node);
                    }
                });
                $("#grid").kendoGrid({
                    dataSource: {
                        data: response,
                        group: [
                            { field: "c_UserName" } // Grouping by UserId and UserName
                        ],
                        schema: {
                            model: {
                                fields: {
                                    c_ContactId: { type: "number" },
                                    c_ContactName: { type: "string" },
                                    c_Email: { type: "string" },
                                    c_Mobile: { type: "string" },
                                    c_Address: { type: "string" },
                                    c_Status: { type: "string" },
                                    c_Group: { type: "string" },
                                    c_Image: { type: "string" }
                                }
                            }
                        },
                        pageSize: 4
                    },
                    height: 400,
                    pageable: true,
                    sortable: true,
                    filterable: true,
                    columns: [
                        { field: "c_UserName", title: "UserName", },
                        {
                            title: "Edit",
                            template: `<button class='k-button k-button-lg k-button-solid-info'onclick='editData(#=c_ContactId#)'>&hellip;</button>`,
                            width: 50
                        },
                        { field: "c_ContactName", title: "Name", width: "150px" },
                        { field: "c_Email", title: "Email", width: "100px" },
                        { field: "c_Mobile", title: "Mobile", width: "80px" },
                        { field: "c_Address", title: "Address", width: "200px" },
                        { field: "c_Status", title: "Status", width: "200px" },
                        { field: "c_Group", title: "Group", width: "200px" },
                        {
                            field: "c_Image",
                            title: "Image",
                            template: `<img src='${staticPath}#=c_Image#' alt='Profile Image'style='width:50px;height:50px;border-radius:50%;' />`,
                            width: 100
                        },
                        {
                            title: "Delete",
                            template: `<button class='k-button k-button-lg k-button-solid-error'onclick='deleteData(#=c_ContactId#,"#=c_ContactName#")'>✘</button>`,
                            width: 70
                        }
                    ]
                });
            },
            error: function (xhr, status, error) {
                $('#responseMessage').addClass("alert alert-danger");
                $('#responseMessage').text('Error: ' + xhr.responseText);
            }
        });
    }
</script>